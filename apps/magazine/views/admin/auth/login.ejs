<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Dashboard | Apaxy - Responsive Bootstrap 4 Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesdesign" name="author" />
    <%- include('../base/css') %>
  </head>

  
  <body class="bg-primary bg-pattern">
    <div class="home-btn d-none d-sm-block">
        <a href="index.html"><i class="mdi mdi-home-variant h2 text-white"></i></a>
    </div>

    <div class="account-pages my-2 pt-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mb-3">
                        <a href="/admin" class="logo"><img src="/admin/static/assets/images/logo-light.png" height="24" alt="logo"></a>
                        <h5 class="font-size-16 text-white-50 mb-4">Responsive Bootstrap 4 Admin Dashboard</h5>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="p-2">
                                <h2 class="mb-5 text-center text-uppercase">Sign in</h2>
                                <form class="form-horizontal needs-validation" novalidate action="/admin/login" method="POST">

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group mb-4">
                                                <label for="email">Email</label>
                                                <input type="email" name="email" class="form-control" id="email" value="root@admin.root" placeholder="Enter email" required>

                                            </div>
                                            <div class="form-group mb-4">
                                                <label for="password">Password</label>
                                                <input type="password" name="password" class="form-control" id="password" value="1234aS" placeholder="Enter password" required>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input" id="remember_me" name="remember_me">
                                                        <label name="remember" class="custom-control-label" for="remember_me">Remember me</label>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <% if (messages.error) { %>
                                                <div class="form-group mt-4 mb-2" >
                                                    <div class="alert alert-danger mb-0" style="font-size: 100%;">
                                                        <%= messages.error %>
                                                    </div>
                                                </div>
                                            <% } %>
                                            <div class="mt-4">
                                                <button class="btn btn-success btn-block waves-effect waves-light" type="submit">Log In</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
    <!-- script -->

    <%- include('../base/js') %>
  </body>
</html>
