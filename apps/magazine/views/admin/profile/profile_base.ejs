<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../base/head.ejs') %>
  <link href="/admin/static/assets/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
  <link href="/admin/static/assets/libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet">
  <link href="/admin/static/assets/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css" rel="stylesheet">
  
  
</head>

<body data-sidebar="dark">
  <!-- Begin page -->
  <div id="layout-wrapper">
    <%- include('../base/topbar') %>

    <!-- ========== Left Sidebar Start ========== -->
    <div class="vertical-menu">
      <div data-simplebar class="h-100">
        <%- include('../base/left-sidebar') %>
      </div>
    </div>
    <!-- Left Sidebar End -->

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">
      <div class="page-content">
        <div class="container-fluid">
          <!-- start page title -->
          <div class="row">
            <div class="col-12">
              <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0 font-size-18">
                  <%= content.toUpperCase() %>
                </h4>

                <div class="page-title-right">
                  <!-- <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                      <a href="javascript: void(0);">Apaxy</a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="javascript: void(0);">Email</a>
                    </li>
                    <li class="breadcrumb-item active">
                      Profile
                    </li>
                  </ol> -->
                </div>
              </div>
            </div>
          </div>
          <!-- end page title -->

          <div class="row mb-4">
            <!-- Left bar -->
            <div class="col-xl-3">
              <div class="card h-100">
                <div class="card-body email-leftbar">
                  <img class="d-flex mx-auto mb-4 rounded-circle avatar-profile"
                  <% if (typeof information.avatar_img !== 'undefined') { %> 
                    src="/avatar/<%= information.avatar_img.filename %> " 
                  <% } else { %> 
                    src="/static/images/anonymous-user.png"
                  <% } %> 
                    alt="Generic placeholder image" />
                    <form action="/admin/profile/upload_avatar/" class="mx-auto" method="POST" enctype="multipart/form-data">
                        <input hidden onchange="this.form.submit()" type="file" id="avatar_img"  name="avatar_img" accept="image/*" />
                        <label for="avatar_img" class="btn btn-primary btn-block btn-rounded waves-effect waves-light">
                            <i class="mdi mdi-cloud-upload mr-2" aria-hidden="true"></i>Change avatar
                        </label>
                    </form>

                  <div class="mail-list mt-4">
                    
                    <a href="/admin/profile" class="<% if (content === 'profile') { %><%= 'active' %><% } %> ">
                      <i class="mdi mdi-account-badge-horizontal mr-2"></i>Profile
                    </a>
                    <a href="/admin/profile/change_password" 
                        class="<% if (content === 'change password') { %><%= 'active' %><% } %> ">
                        <i class="mdi mdi-key-star mr-2"></i>Change password
                    </a>
                    <a href="/admin/logout"><i class="mdi mdi-logout-variant mr-2"></i>Log out</a>
                  </div>
                  
                </div>
              </div>
            </div>
            <!-- end left bar -->

            <div class="col-xl-9">
              <div class="card mb-0">
                <div class="card-body">
                  <!-- Flash messages -->
                  <%- include('../base/flash_messages.ejs') %>
                  <!-- End Flash messages -->

                  <!-- right bar component -->
                  <% if (content === 'profile') { %> 
                  <%- include('./profile_information') %>
                  <% } else if (content === 'change password') { %> 
                  <%- include('./change_password') %>
                  <% } %> 
                  <!-- end right bar component -->
                </div>
              </div>
              <!-- end card -->
            </div>
          </div>
          <!-- end row -->
        </div>
        <!-- container-fluid -->
      </div>
      <!-- End Page-content -->

      <!-- footer -->
      <%- include('../base/footer') %>
      <!-- end footer -->
    </div>
    <!-- end main content-->
  </div>
  <!-- END layout-wrapper -->

  <!-- script -->
  <%- include('../base/js') %>
  <script src="/admin/static/assets/libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
  <script src="/admin/static/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
  <script src="/admin/static/assets/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
  <script src="/admin/static/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
  <!-- form advanced init -->
  <script src="/admin/static/assets/js/pages/form-advanced.init.js"></script>
</body>

</html>