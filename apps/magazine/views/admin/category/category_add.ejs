<h4 class="header-title">Create Form</h4>
<p class="card-title-desc">Submit the <code>Create</code> button to add a new category.</p>
<form action="/admin/categories/add" method="POST" class="needs-validation" novalidate>
    <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">Name</label>
        <div class="col-md-10">
            <% if (typeof errors !== 'undefined') { %>
            <% errors.forEach( (error) => { %>
            <% if (error.param === 'name') { %>
            <input type="text" class="form-control is-invalid" value="<%= error.value %>" name="name" id="name"
                placeholder="Enter name for category" required>
            <div class="invalid-feedback">
                <%= error.msg %>
            </div>
            <% } %>
            <% }) %>
            <% } %>

            <% if (typeof validInput !== 'undefined' && typeof validInput.name !== 'undefined') { %>
            <input type="text" class="form-control is-valid" name="name" id="name" value="<%= validInput.name %>"
                placeholder="Enter name for category" required>
            <% } %>

            <% if (typeof errors === 'undefined' && typeof validInput === 'undefined') { %>
            <input type="text" class="form-control" name="name" id="name" placeholder="Enter name for category"
                required>
            <% } %>
        </div>
    </div>
    <div class="row mb-0">
        <div class="col-lg-12">
            <div class="text-right">
                <button type="submit" class="btn btn-primary">CREATE</button>
            </div>
        </div>
    </div>
</form>