      <div class="swiper-button-prev">
        <svg xmlns="http://www.w3.org/2000/svg" width="10px" height="7px">
          <path
            fill-rule="evenodd"
            fill="rgb(255, 255, 255)"
            d="M4.610,0.163 L0.160,4.708 C0.057,4.813 -0.000,4.953 -0.000,5.103 C-0.000,5.253 0.057,5.393 0.160,5.498 L0.487,5.833 C0.701,6.050 1.048,6.050 1.261,5.833 L4.998,2.016 L8.739,5.837 C8.842,5.942 8.979,6.000 9.126,6.000 C9.272,6.000 9.410,5.942 9.513,5.837 L9.840,5.502 C9.943,5.397 10.000,5.257 10.000,5.107 C10.000,4.958 9.943,4.817 9.840,4.712 L5.386,0.163 C5.283,0.058 5.145,-0.000 4.998,0.000 C4.851,-0.000 4.713,0.058 4.610,0.163 Z"
          />
