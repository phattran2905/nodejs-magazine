      </div>
    </div>
  </div>
  <% if (typeof information !== 'undefined' && information != null) { %> 
  <div class="blog_profile">
    <div class="blog_main_menu">
      <div class="blog_main_menu_innerdiv">
      <ul>
        <li class="blog_dropdown">
          <a href="#" class="blog_auth" style="width: 100%;"><img 
                <% if (typeof information.avatar_img !== 'undefined') { %>
                src="/avatar/<%= information.avatar_img.filename %>" 
                <% } else  { %>
                src="/static/images/anonymous-user.png"
                <% } %> 
                class="mr-2 rounded-circle" width="30px" height="30px" alt="avatar"><%= information.username %></a>
          <ul class="sub-menu profile_sub_menu">
              <li><a href="/profile"> <i class="fa fa-user mr-2"></i> Profile</a></li>
              <li><a href="/articles"> <i class="fa fa-newspaper-o mr-2"></i>Article</a></li>
              <li><a href="/author?id=<%= information.id %>"> <i class="fa fa-bar-chart mr-2"></i>Statistics</a></li>
              <li><a href="/profile/change_password"> <i class="fa fa-unlock-alt mr-2"></i>Change password</a></li>
              <li><a href="/logout"> <i class="fa fa-power-off mr-2"></i>Log out</a></li>
          </ul>
        </li>
      </ul>
      </div>
   </div>
  </div>
  <% } else { %>
    <!-- Sign up -->
  <div class="blog_date_div">
    <a class="blog_auth" href="/signup"> <i class="fa fa-user-plus"></i>Sign up </a>
  </div>
  <!-- Log in -->
  <div class="blog_temperature_div">
      <a class="blog_auth" href="/login"> <i class="fa fa-sign-in"></i>Log in </a>
  </div>
  <% } %> 
</div>
