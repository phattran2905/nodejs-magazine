
<div class="blog_main_header">
    <div class="blog_logo">
        <a href="/"><img src="/static/images/logo.png" class="img-fluid" alt="logo"></a>
        <div class="blog_menu_toggle">
            <span>
                <i class="fa fa-bars" aria-hidden="true"></i>
            </span>
        </div>
    </div>
    <div class="blog_main_menu">
        <div class="blog_main_menu_innerdiv">
            <ul>
                <% if (typeof menu_list !== 'undefined') { %> 
                    <% for(let i = 0; i < menu_list.length; i++) { %> 
                        <!-- <li class="active"> -->
                        <li class="mx-3">
                            <% if (menu_list[i].name.toLowerCase() == 'home') { %> 
                            <a href="/"><%= menu_list[i].name %></a>
                            <% } else { %> 
                            <a href="/category?id=<%= menu_list[i].categoryId %>"><%= menu_list[i].name %></a>
                            <%  } %> 
                            <% if (menu_list[i].submenu.length > 0) { %> 
                            <ul class="sub-menu">
                                <% for(let j =0 ; j < menu_list[i].submenu.length; j++) { %> 
                                <li>
                                    <a href="/category?id=<%= menu_list[i].submenu.categoryId %>">
                                        <%= menu_list[i].submenu[j].name  %> 
                                    </a>
                                </li>
                                <% } %> 
                            </ul>
                            <% } %> 
                        </li>
                    <%  } %> 
                <%  } %> 
            </ul>
        </div>
    </div>
    <div class="blog_top_search">
        <form action="/search" method="GET" class="form-inline">
            <div class="blog_form_group">
                <input type="text" id="title" name="title" class="form-control" placeholder="Search Here...">
                <button type="submit" class="blog_header_search" style="position: absolute;">
