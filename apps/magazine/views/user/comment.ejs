<div class="blog_comment_div">
    <h3 class="wow fadeInUp">Comments <span>(<%= article.interaction.comments.length %>)</span></h3>
    <ol class="comment-list">
        <% for(let x = 0; x < article.interaction.comments.length; x++) { %> 
        <li class="wow fadeInUp">
            <div class="blog_comment">
                <div class="blog_comment_img">
                    <img src="/static/images/anonymous-user.png" class="img-fluid" alt="">
                </div>
                <div class="blog_comment_data">
                    <h3><%= article.interaction.comments[x].audienceId.name %> 
                        <span>- <%= article.interaction.comments[x].createdAt.toLocaleDateString('en-Us',{year: 'numeric', month: 'long', day: '2-digit'}) %></span>
