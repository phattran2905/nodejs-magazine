<!DOCTYPE html>
<html lang="en">

<head>
  <title>Wlog - Blog and Magazine HTML template </title>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta name="description" content="Blog">
  <meta name="keywords" content="">
  <meta name="author" content="kamleshyadav">
  <meta name="MobileOptimized" content="320">

  <%- include('../base/css') %>
  <!-- Icons Css -->
  <link href="/admin/static/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
  <!-- App Css-->
  <link href="/admin/static/assets/libs/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet">
  <!-- Summernote css -->
  <link href="/admin/static/assets/libs/summernote/summernote-bs4.css" rel="stylesheet" type="text/css" />

  <!-- Sweet Alert-->
  <link href="/admin/static/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" type="text/css" href="/static/css/override.css">
  <style>
    div.modal-backdrop.show {z-index: 0;}
  </style>
</head>

<body>
  <div id="blog_preloader_wrapper">
    <div id="blog_preloader_box">
      <div class="blog_loader">
        <div></div>
        <div></div>
      </div>
    </div>/
  </div>
  <div class="blog_main_wrapper">
    <!-- top header -->
    <%- include('../base/top_header') %>
    <!-- end top header -->

    <!-- main_menu -->
    <%- include('../base/main_menu') %>
    <!-- end main_menu -->

    <!-- main content -->
    <div class="blog_main_wrapper blog_toppadder20 blog_bottompadder60">
      <div class="fluid-container">
        <div class="row">
          <div class="col-lg-8 col-md-10 col-sm-12 col-12 offset-lg-2 offset-md-1 blog_toppadder40">
            <div class="mb-5 blog_contact_form_div wow fadeInUp">
              <div class="blog_main_heading_div">
                <div class="blog_heading_div">
                  <h3 class="blog_bg_lightgreen"><%= header %></h3>
                </div>
              </div>

              <!-- start page title -->
              <% if (content !== 'article_list') { %>
              <div class="row px-3">
                <div class="col-12">
                  <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">
                      <a href="/articles" class="btn btn-dark">
                        <i class="mdi mdi-keyboard-backspace"></i>
                      </a>
                    </h4>

                    <div class="page-title-right">
                      <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/articles">Article</a></li>
                        <% if (content === 'article_add') { %>
                        <li class="breadcrumb-item active text-info">Add</li>
                        <% } else if (content === 'article_preview') { %>
                        <li class="breadcrumb-item active text-info">Preview</li>
                        <% } else if (content === 'article_update') { %>
                        <li class="breadcrumb-item active text-info">Update</li>
                        <% } %>
                      </ol>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>

              <!-- end page title -->

              <div class="row">
                <div class="col-12 px-5 py-4">
                  <div class="card m-3" style="border: 3px solid #f7f7f9;">
                    <div class="card-body mx-4 my-3">
                      <!-- Flash -->
                      <%- include('../base/flash_messages') %>
                      <!-- articles content -->
                      <% if (content === 'article_list') { %>
                      <%- include('./article_list') %>
                      <% } else if (content === 'article_add') { %>
                      <%- include('./article_add') %>
                      <% } else if (content === 'article_preview') { %>
                      <%- include('./article_preview') %>
                      <% } else if (content === 'article_update') { %>
                      <%- include('./article_update') %>
                      <% } %>
                      <!-- end content -->
                    </div> <!-- end col -->
                  </div> <!-- end row -->
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end main content -->

    <!-- footer and copyright -->
    <%- include('../base/footer') %>
    <!-- end footer and copyright -->
  </div>

  <%- include('../base/js') %>
  <% if (content === 'article_list') { %>
  <script src="/admin/static/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
  <script src="/admin/static/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
  <script src="/admin/static/assets/libs/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
  <script src="/admin/static/assets/libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>


  <script src="/admin/static/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
  <script src="/admin/static/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>

  <script src="/admin/static/assets/libs/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
  <script src="/admin/static/assets/libs/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>

  <script src="/admin/static/assets/js/pages/datatables.init.js"></script>
  <!-- Sweet Alerts js -->
  <script src="/admin/static/assets/libs/sweetalert2/sweetalert2.min.js"></script>
  <!-- Sweet alert init js-->
  <script src="/admin/static/assets/js/pages/sweet-alerts.init.js"></script>
  
  <% } else { %>
  <!-- Summernote js -->
  <script src="/admin/static/assets/libs/summernote/summernote-bs4.min.js"></script>

  <!-- form advanced init -->
  <script src="/admin/static/assets/js/pages/form-advanced.init.js"></script>
  <!-- init js -->
  <script src="/admin/static/assets/js/pages/summernote.init.js"></script>

  <% } %>
  <script>
    var loadFile = function(event) {
      var output = document.getElementById('old_thumbnail');
      output.src = URL.createObjectURL(event.target.files[0]);
      output.onload = function() {
        URL.revokeObjectURL(output.src) // free memory
      }
    };
  </script>
</body>

</html>