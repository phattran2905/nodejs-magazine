<p class="card-title-desc">
    <a href="/admin/audiences/add" class="btn btn-success waves-effect waves-light mr-2">
      <i class="mdi mdi-plus-box-multiple-outline"></i> ADD NEW
    </a>
  </p>
  <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap "
    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Created at</th>
        <th>Action</th>
      </tr>
    </thead>
  
  
    <tbody>
      <% if (audiences) { %>
      <% audiences.forEach((audience) => { %>
      <tr>
        <td class="admin-username" id="<%= audience.name %>"><%= audience.name %></td>
        <td><%= audience.email %></td>
        <td><%= audience.createdAt.toLocaleDateString('en-US',{month: '2-digit', day: '2-digit', year: 'numeric'}) %></td>
        <td class="text-center">
            <form action="/admin/audiences/delete" class="d-inline" method="POST">
            <input type="hidden" name="id" value="<%= audience.id %>">
            <button class="btn btn-danger text-light sa-warning-delete" type="button" role="button"
                data-toggle="tooltip" data-placement="top" title="Delete" data-original-title="Delete">
                <i class="mdi mdi-delete-alert"></i>
            </button>
            </form>
        </td>
      </tr>
      <% }) %>
      <% } %>
    </tbody>
  </table>