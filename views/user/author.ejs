<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Wlog - Blog and Magazine HTML template </title>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta name="description" content="Blog">
    <meta name="keywords" content="">
    <meta name="author" content="kamleshyadav">
    <meta name="MobileOptimized" content="320">
    
    <%- include('./base/css') %> 
</head>

<body class="homepage2">

<div id="blog_preloader_wrapper">
     <div id="blog_preloader_box">
          <div class="blog_loader">
              <div></div>
              <div></div>
          </div>
     </div>
</div>

<div class="blog_main_wrapper">
    
    <!-- top header -->
    <%- include('./base/top_header') %>
    <!-- end top header -->

    <!-- main_menu -->
    <%- include('./base/main_menu') %>
    <!-- end main_menu -->

	<div class="blog_breadcrumb_wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-12">
					<div class="blog_breadcrumb_div">
						<h3>Author</h3>
						<ol class="breadcrumb">
							<li>You are here:</li>
							<li><a href="/">Home</a></li>
							<li>Author</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
    </div>

    <%# content %> 
	<div class="blog_main_wrapper blog_toppadder60 blog_bottompadder60">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <%# flash messages %> 
                        <!-- Flash -->
                    <%- include('./base/flash_messages') %>
                    <!-- Form -->
					<div class="blog_food_health blog_topheading_slider_nav blog_topheading_style2 blog_innerpages">
                        <%# author info %> 
						<div class="blog_food_style2">
							<div class="blog_food_bigdiv wow fadeInUp">
								<div class="blog_post_style2">
                                    <div class="row">
                                        <div class="col-3 author_avatar" style="width: 30%;padding: 15px;margin-left: 36px;margin-top: 30px;">
                                            <img src="/avatar/<%= author.info.profile.avatar_img.filename %>" class="img-fluid" alt="" style="border-radius: 50%;height: 13rem;">
                                            <p class="text-center mt-3 p-2">
                                                <% if (typeof information === 'undefined' || information == null) { %> 
                                                <button type="button" class="btn btn-primary mx-auto" data-toggle="modal" data-target="#exampleModalCenter" style="font-size: 16px;">
                                                    <i class="fa fa-random mr-2"></i>Follow
                                                </button>
                                                <% } else { %> 
                                                <button type="button" class="btn btn-secondary mx-auto" style="font-size: 16px;">
                                                    <i class="fa fa-ban mr-2"></i>Follow
                                                </button>
                                                <% }%> 
                                            </p>
                                        </div>
                                        <div class="col-8 author-info">
                                            <ul class="p-4 ml-4">
                                                <li class="row border-bottom">
                                                    <p class="col-3 ">
                                                        <i class="fa fa-address-card mr-2"></i>Full-name
                                                    </p>
                                                    <p class="col-8 text-center font-weight-bold text-black" style="font-size: 18px;">
                                                        <%= author.info.profile.fullname.toUpperCase()  %>
                                                    </p>
                                                </li>
                                                <li class="row border-bottom">
                                                    <p class="col-3">
                                                        <i class="fa fa-venus-mars mr-2"></i> Gender
                                                    </p>
                                                    <p class="col-8 text-center font-weight-bold text-black" style="font-size: 18px;">
                                                        <% if(author.info.profile.gender === 'male') { %> 
                                                            <i class="fa fa-male mr-2"></i>
                                                            <% } else if (author.info.profile.gender === 'female') { %> 
                                                            <i class="fa fa-female mr-2"></i>
                                                                <% } %> 
                                                        <%= author.info.profile.gender.toUpperCase() %>
                                                    </p>
                                                </li>
                                                <li class="row border-bottom">
                                                    <p class="col-3">
                                                        <i class="fa fa-birthday-cake mr-2"></i> Date of birth
                                                    </p>
                                                    <p class="col-8 text-center font-weight-bold text-black" style="font-size: 18px;">
                                                        <%= author.info.profile.dateOfBirth.toLocaleDateString('en-Us', {year: 'numeric', month: 'long', day: '2-digit'}) %>
                                                    </p>
                                                </li>
                                                <li class="row border-bottom">
                                                    <p class="col-3">
                                                        <i class="fa fa-envelope mr-2"></i>Email
                                                    </p>
                                                    <p class="col-8 text-center font-weight-bold text-black" style="font-size: 18px;">
                                                        <%= author.info.email %>
                                                    </p>
                                                </li>
                                                <li class="row border-bottom">
                                                    <p class="col-3">
                                                        <i class="fa fa-calendar-check-o mr-2"></i>Joined on
                                                    </p>
                                                    <p class="col-8 text-center font-weight-bold text-black" style="font-size: 18px;">
                                                        <%= author.info.createdAt.toLocaleDateString('en-Us', {year: 'numeric', month: 'long', day: '2-digit'}) %>
                                                    </p>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
									<div class="blog_post_style2_content row">
										<div class="col-sm-6 col-xl-4">
                                            <div class="card bg-soft-danger p-2">
                                                <div class="card-body">
                                                    <div class="media">
                                                        <div class="media-body d-flex flex-row justify-content-between mb-2">
                                                            <h5 class="font-size-14">Number of Articles </h5>
                                                            <i class="fa fa-newspaper-o mr-0"></i>
                                                        </div>
                                                    </div>
                                                    <h4 class="mt-2 p-2 text-center"><%= author.statistics.numOfArticles %></h4>
                                                </div>
                                            </div>
                                        </div>
										<div class="col-sm-6 col-xl-4">
                                            <div class="card bg-soft-warning p-2">
                                                <div class="card-body">
                                                    <div class="media">
                                                        <div class="media-body d-flex flex-row justify-content-between mb-2">
                                                            <h5 class="font-size-14">Number of Views</h5>
                                                            <i class="fa far fa-eye mr-0"></i>
                                                        </div>
                                                    </div>
                                                    <h4 class="mt-2 p-2 text-center"><%= author.statistics.numOfViews %></h4>
                                                </div>
                                            </div>
                                        </div>
										<div class="col-sm-6 col-xl-4 ">
                                            <div class="card bg-soft-info p-2">
                                                <div class="card-body">
                                                    <div class="media">
                                                        <div class="media-body d-flex flex-row justify-content-between mb-2">
                                                            <h5 class="font-size-14">Number of Followers</h5>
                                                            <i class="fa fa fa-users mr-0"></i>
                                                        </div>
                                                    </div>
                                                    <h4 class="mt-2 p-2 text-center"><%= author.statistics.numOfFollowers %></h4>
                                                </div>
                                            </div>
                                        </div>
									</div>
								</div>
							</div>
                        </div>
                        
                        <h3 class="mt-3">Recent articles</h3>

                        <%# list of articles %> 
						<div class="blog_technology_slider">
                            <% if (author.articles.length > 0) { %> 
                                <% for(let i = 0; i < author.articles.length; i++){ %> 
							<div class="blog_post_style2 wow fadeInUp" style="height: 177px;">
								<div class="blog_post_style2_img">
									<img src="/thumbnail/<%= author.articles[i].thumbnail_img.filename %>"  alt="" style="height: 100%;width: 100%;">
								</div>
								<div class="blog_post_style2_content">
									<h3>
                                        <a href="/article?id=<%= author.articles[i]._id %>"><%- author.articles[i].title %></a>
                                    </h3>
									<div class="blog_author_data">
                                        <a href="#">
                                            <img src="/avatar/<%= author.info.profile.avatar_img.filename %>" class="img-fluid" alt="" width="34" height="34"> <%= author.info.profile.fullname %> </a>
