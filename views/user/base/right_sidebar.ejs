                <button id ="sa-subscribe-success" type="button" class="d-none"></button>
            </form>
        </div>
    </div>
    <div class="ads_widget wow fadeInUp">
        <a href="#"><img src="https://via.placeholder.com/280x350?text=Ads%20Area" class="img-fluid" alt=""></a>
    </div>
</div>